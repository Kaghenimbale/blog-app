<div class="container">
<% @users.each do |user| %>
  <%= link_to user_path(user.id) do %>
  <div class="user">
  <div class="user-profile">
    <img src='<%= user.photo%>' alt="user_profile" />
  </div>
  <div class="user-description">
    <h2>
    <%= user.name %>
    </h2>
    <p>Number of post: <%= user.posts_counter %></p>
  </div>
  </div>
  <% end %>
  <% end %>
</div>
