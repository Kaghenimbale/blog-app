<div class="container">
<div class="content">
<div class="comment-like-container">
  <p> Post #<%= @post.id %> by <%= @user.name %> </p>
  <div class="comment_like">
  <p> comments: <%= @post.comments_counter %> </p>
  <p> likes: <%= @post.likes_counter %> </p>
</div>
</div>

<div>
  <%= @post.text %>
</div>
</div>

<% @post.comments.order('created_at DESC').limit(5).each do |comment|%>
  <div class="content">
    <p><%=comment.author.name %>: <span><%=comment.text %></span></p>
  </div>
<% end %>

<div class="post-btn">
<button>
  <%= link_to "back",  user_posts_path(@user)%>
</button>
</div>
<div class="add-post-btn d-flex">
<button>
  <%= link_to "Add Comment", new_user_post_comment_path(@user, @post)%>
</button>
</div>

<buttons>
  <%= button_to "Add Like", user_post_likes_path(@user, @post)%>
</button>
</div>

